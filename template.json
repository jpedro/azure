{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storagePrefix": {
      "type": "string",
      "defaultValue": "pedrotest2",
      "minLength": 3,
      "maxLength": 11
    },
    "storageName": {
      "type": "string",
      "defaultValue": "pedrotest12345",
      "minLength": 3,
      "maxLength": 24
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "spname": {
      "type": "string"
    },
    "spnumberOfWorkers": {
      "type": "string"
    },
    "spsku": {
      "type": "string"
    },
    "spskuCode": {
      "type": "string"
    },
    "spworkerSize": {
      "type": "string"
    },
    "spworkerSizeId": {
      "type": "string"
    },
    "resourceTags": {
      "type": "object",
      "defaultValue": {
        "owner": "pedro",
        "env": "dev",
        "project": "tutorial"
      }
    }
  },
  "variables": {
    "uniqueStorageName": "[concat(parameters('storagePrefix'), uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2019-04-01",
      "name": "[parameters('storageName')]",
      "name": "[variables('uniqueStorageName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('resourceTags')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "supportsHttpsTrafficOnly": true
      }
    },
    {
      "apiVersion": "2018-11-01",
      "name": "[parameters('spname')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[parameters('location')]",
      "kind": "linux",
      "tags": "[parameters('resourceTags')]",
      "properties": {
        "name": "[parameters('spname')]",
        "workerSize": "[parameters('spworkerSize')]",
        "workerSizeId": "[parameters('spworkerSizeId')]",
        "numberOfWorkers": "[parameters('spnumberOfWorkers')]",
        "reserved": true
      },
      "sku": {
        "Tier": "[parameters('spsku')]",
        "Name": "[parameters('spskuCode')]"
      }
    }
  ],
  "outputs": {
    "storageEndpoint": {
      "type": "object",
      "value": "[reference(variables('uniqueStorageName')).primaryEndpoints]"
    }
  }
}
